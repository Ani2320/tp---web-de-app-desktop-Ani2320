@{
    ViewData["Title"] = "Iniciar Sesion";
}


<section class="container seccion">
    <form class="formulario" action="/Home/IniciarSesion" method="POST">
        <h1>Iniciar Sesion</h1>
        <div class="contenedor">
             @{
        if(ViewBag.registerMessage != null)
        {
            <div class = "container">
            <p>@ViewBag.registerMessage</p>
            </div>
        }

    }
            <div class="input-contenedor">
                <i class="fas fa-envelope icon"></i>
                <input type="text" placeholder="Usuario" name="Usuario" required>
            </div>

            <div class="input-contenedor">
                <i class="fas fa-key icon"></i>
                <input type="password" placeholder="Contraseña" name="Pass" required>
            </div>

             @{
        if(ViewBag.errorLogin != null)
        {
            <p>@ViewBag.errorLogin</p>
        }

    }

            <button type="submit">Ingresar</button>
            <p>¿No tienes una cuenta? <a class="link" asp-area="" asp-controller="Home" asp-action="Registrarse">Registrate</a></p>
        </div>
    </form>
</section>